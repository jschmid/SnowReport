<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">



	<LinearLayout android:id="@+id/searchWrapper"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/display_back" android:padding="5dip"
		android:paddingBottom="0dp" android:visibility="gone">

		<EditText android:layout_height="wrap_content" android:id="@+id/searchText"
			android:inputType="text" android:hint="@string/search_hint"
			android:layout_width="fill_parent" android:lines="1" />
	</LinearLayout>

	<ListView android:id="@+id/resorts_list"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:fastScrollEnabled="true">
	</ListView>
</LinearLayout>
